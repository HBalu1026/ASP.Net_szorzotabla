@page
@model WebApplication1.Pages.FelhasznaloModel
@{
}
<h1>Felhasználó</h1>
<h2>Új felhasználó felvéztele</h2>
<form method="post">
    <input type="text" name="nev"/>
    <input type="email" name="email"/>
    <input type="number" name="szulEv" value="2000"/>
    <input type="submit"/>
</form>
<h2>Felhasználók listája</h2>
<table class="table">
   <thead>
       <tr>
           <th>Név</th>
           <th>E-mail</th>
           <th>Születési év</th>
       </tr>
   </thead>
   <tbody>
       @foreach (var f in Model.felhasznalok)
        {
            <tr>
                <td>@f.Nev</td>
                <td>@f.Email</td>
                <td>@f.SzulEv</td>
            </tr>
        }
   </tbody>
</table>